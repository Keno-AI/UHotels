<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div style=" margin: 0 auto;">
            <h1 style="text-align: center;">Add Comment to <%= hotel.name%></h1>
            <form action="/hotels/<%= hotel._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name='text' placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels/<%= hotel._id %>" class="btn btn-lg btn-primary btn-block" role="button">Go Back</a>
        </div>
        
    </div>
</div>




<%- include("../partials/footer") %>
