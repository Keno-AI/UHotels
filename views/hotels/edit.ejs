<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div style=" margin: 0 auto;">
            <h1 style="text-align: center;">Edit <%=hotel.name%> </h1>
            <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=hotel.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=hotel.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%=hotel.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels/<%=hotel._id%>" class="btn btn-lg btn-primary btn-block" role="button">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
